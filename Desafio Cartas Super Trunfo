#include <stdio.h>

int main() {
    // Declaração das variáveis para as duas cartas
    char estado1[2], codigo1[2], cidade1[50];
    int populacao1, pontosturisticos1;
    float area1, pib1;

    char estado2[2], codigo2[2], cidade2[50];
    int populacao2, pontosturisticos2;
    float area2, pib2;

    // --- Carta 1 ---
    printf("===== CADASTRO DA CARTA 1 =====\n");

    printf("Digite uma letra de A a H:\n");
    scanf(" %c", &estado1[0]);
    estado1[1] = '\0'; // finaliza string

    printf("Digite um número de 1 a 4:\n");
    scanf(" %c", &codigo1[0]);
    codigo1[1] = '\0';

    // Não utilizei nenhum especificador para que ele aceite cidades com mais de uma palavra
    printf("Digite o nome da cidade:\n");
    scanf(" %[^\n]", cidade1);

    printf("Digite a população da cidade:\n");
    scanf("%d", &populacao1);

    printf("Digite a quantidade de pontos turísticos:\n");
    scanf("%d", &pontosturisticos1);

    printf("Digite a área da cidade em km²:\n");
    scanf("%f", &area1);

    printf("Digite o PIB da cidade:\n");
    scanf("%f", &pib1);

    // --- Carta 2 ---
    printf("\n===== CADASTRO DA CARTA 2 =====\n");

    printf("Digite uma letra de A a H:\n");
    scanf(" %c", &estado2[0]);
    estado2[1] = '\0';

    printf("Digite um número de 1 a 4:\n");
    scanf(" %c", &codigo2[0]);
    codigo2[1] = '\0';

    // Não utilizei nenhum especificador para que ele aceite cidades com mais de uma palavra
    printf("Digite o nome da cidade:\n");
    scanf(" %[^\n]", cidade2);

    printf("Digite a população da cidade:\n");
    scanf("%d", &populacao2);

    printf("Digite a quantidade de pontos turísticos:\n");
    scanf("%d", &pontosturisticos2);

    printf("Digite a área da cidade em km²:\n");
    scanf("%f", &area2);

    printf("Digite o PIB da cidade:\n");
    scanf("%f", &pib2);

    // Impressão dos resultados

    printf("\n===== CARTA 1 =====\n");
    printf("ESTADO: %s\n", estado1);
    printf("Código completo: %s%s\n", estado1, codigo1);
    printf("Cidade: %s\n", cidade1);
    printf("População: %d\n", populacao1);
    printf("Pontos turísticos: %d\n", pontosturisticos1);
    printf("Área: %.2f km²\n", area1);
    printf("PIB: R$ %.2f\n", pib1);

    printf("\n===== CARTA 2 =====\n");
    printf("ESTADO: %s\n", estado2);
    printf("Código completo: %s%s\n", estado2, codigo2);
    printf("Cidade: %s\n", cidade2);
    printf("População: %d\n", populacao2);
    printf("Pontos turísticos: %d\n", pontosturisticos2);
    printf("Área: %.2f km²\n", area2);
    printf("PIB: R$ %.2f\n", pib2);

    return 0;
}
